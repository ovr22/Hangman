#include <iostream>
#include <ctime>
#include <cstdlib>
#include <vector>

using namespace std;

string GetRandomWord();

int main() {
    //Greeting
    cout << "Welcome! We are going to play Hangman!" << endl;

    //Gets a random word from a 10 word bank and lets the user know how many letters are in the word.
    string guessWord = GetRandomWord();
    cout << "Your word has " << guessWord.size() << " letters." << endl;
    for (int i = 0; i < guessWord.size(); ++i) {
        cout << "_";
        if (i == guessWord.size() - 1){
            cout << endl;
        }
    }

    string blankWord = "_";
    for (int i = 0; i < guessWord.size(); ++i) {
        blankWord.at(i) = '_';
    }
    cout << blankWord;

    return 0;
}

string GetRandomWord(){
    string randWord;
    srand(time(0));
    int word = rand()%10;
    if (word == 0){
        randWord = "jazzy";
    }
    else if (word == 1) {
        randWord = "giraffe";
    }
    return randWord;
}